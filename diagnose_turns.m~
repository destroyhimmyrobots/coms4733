function diagnose_turns(serPort)
    %correction_per_deg = 0.0500;
    angle_to_turn = 45;
    %for i=1:(360 / angle_to_turn);
        turnAngle(serPort, 0.1, correct_angle(angle_to_turn));
        pause(1);
    %end
    
    function ang = correct_angle(angle)
       % m = -3.121975308642002e-04;
       % b =  0.077702222222222;
        %correction_per_deg = m * angle + b;
        %ang = angle - (angle * correction_per_deg) ;
        %b = -1.299999999999955;
        %m = 0.964444444444444;
        %ang = (angle * m) + b;
        %m = 0.988888888888889;
        %b = -3.000000000000014;
        ang = 40%(angle * m) + b;
    end
end

% 4 - 0.0500 
% 8 - 0.0644 
% 0.0036

% 90 - 4.5 - 0.0500 / deg
% 45 - 2.9 - 0.0644 / deg

% 90, 85.5
% 45,  42.100000000000001




